<link href="~/css/workout.css" rel="stylesheet" />
<script src="~/Scripts/validation.js"></script>
@using WebApplication.Web.Models.Account;
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="welcome" id="center">
    <div id="login">
        <h1 class="pageTitle" style="margin-bottom:20px; margin-top:0px; padding-top:10px;">Login</h1>

        <form asp-controller="account" asp-action="login" method="post">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input style="color:black" asp-for="Email" placeholder="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input style="color:black" type="password" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>
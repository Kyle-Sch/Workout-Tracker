@model CheckMemberInOutModel

<div>
    @{
        for (int i = 0; i < Model.Users.Count; i++)
        {
            <div>
                <span>@Model.Users[i].Username</span>

                <form style="display:inline" asp-controller="Employee" asp-action="CheckMemberOut" method="post">
                    <label asp-for="@Model.ToBeChecked.Id" hidden></label>
                    <input asp-for="@Model.ToBeChecked.Id" value="@Model.Users[i].Id" hidden />

                    <label asp-for="@Model.ToBeChecked.Username" hidden></label>
                    <input asp-for="@Model.ToBeChecked.Username" value="@Model.Users[i].Username" hidden />
                    <button type="submit" class="btn btn-default">Check Member Out</button>
                </form>

            </div>
        }

    }
</div>
